{
  "name": "boilerplate",
  "type": "module",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "prepreview": "npm run build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint --config eslint.config.js",
    "lint-fix": "npm run lint -- --fix",
    "test": "vitest --watch=false",
    "test-watch": "vitest",
    "update-packages": "npx npm-check-updates -u && npm install",
    "checks": "npm run type-check && npm run test && npm run lint-fix && npm run build"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@preact/preset-vite": "^2.10.2",
    "@stylistic/eslint-plugin": "^5.4.0",
    "@tailwindcss/vite": "^4.1.14",
    "@types/node": "^24.7.0",
    "eslint": "^9.37.0",
    "tailwindcss": "^4.1.14",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.0",
    "vite": "^7.1.9",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@preact/signals": "^2.3.2",
    "preact": "^10.27.2",
    "preact-root-fragment": "^0.3.1"
  }
}
